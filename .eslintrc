{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": true
    },
    "globals": {
        "Float32Array": true,
        "Uint32Array": true,
        "Promise": true,
        "Uint8Array": true,
        "ArrayBuffer": true,
        "__VERSION__": true
    },
    "env": {
        "browser": true,
        "commonjs": true
    },
    "rules": {
        "strict": 0,
        "semi": "error"
    },
    "overrides": [
        {
            "files": [
                "example/**/*.js",
                "spec/**/*.js"
            ],
            "rules": {
                "no-console": "off",
                "require-jsdoc": 0,
                "valid-jsdoc": 0
            }
        }
    ]
}